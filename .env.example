# LFG Platform Environment Variables
# Copy this file to .env and update with your values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=lfg
DB_PASSWORD=lfg_dev_password
DB_NAME=lfg
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# NATS Configuration
NATS_URL=nats://nats:4222

# Service URLs (for API Gateway)
USER_SERVICE_URL=http://user-service:8080
WALLET_SERVICE_URL=http://wallet-service:8081
ORDER_SERVICE_URL=http://order-service:8082
MARKET_SERVICE_URL=http://market-service:8083
CREDIT_EXCHANGE_URL=http://credit-exchange:8084
NOTIFICATION_SERVICE_URL=http://notification-service:8085

# Matching Engine
MATCHING_ENGINE_GRPC=matching-engine:50051

# Service Ports
API_GATEWAY_PORT=8000
USER_SERVICE_PORT=8080
WALLET_SERVICE_PORT=8081
ORDER_SERVICE_PORT=8082
MARKET_SERVICE_PORT=8083
CREDIT_EXCHANGE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
